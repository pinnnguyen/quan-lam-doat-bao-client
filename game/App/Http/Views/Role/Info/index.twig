                □{{ equipment.name }}
                <br/>
            {% endif %}
        {% endfor %}
    {% endif %}
    {% if skill_status is not empty %}
        Cấp độ kỹ năng
        <br/>
        {% for status in skill_status %}
            {{ status.base_skill_name }}{% if status.sect_skill_name is not empty %}（{{ status.sect_skill_name }}）{% endif %}：{{ status.comprehensive_lv }}
